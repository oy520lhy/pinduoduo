.base-info {
  overflow: hidden;
  text-align: center;
  background-color: #e02e24;
}

.login-btn {
  width: 30%;
  padding: 10px;
  margin: 15px auto 30px;
  line-height: 1rem;
  color: #eee;
  background-color: transparent;
  border: 1px solid #eee;
}

.userinfo-avatar {
  display: block;
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto 5px;
  border: 4px solid #de5b4a;
  border-radius: 50%;
}

.userinfo-nickname {
  display: block;
  margin-bottom: 3px;
  color: #eee;
}

.refresh-btn {
  display: flex; 
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 30%;
  padding: 5px 15px;
  margin: 0 auto 8px;
  font-size: 0.7rem;
  line-height: 0;
  vertical-align: center;
  color: #ccc;
  background-color: transparent;
  border: 1px solid #ccc;
  border-radius: 20px;
}

.refresh-btn > image {
  width: 0.7rem;
  margin-right: 2px;
}

.menu-block {
  margin-bottom: 8px;
  background-color: #fff;
}

.go-all-orders {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 13px 10px;
  border-bottom: 1px solid #eee;
}

.go-all-orders > text {
  font-weight: 500;
}

.right-side {
  display: flex;
  align-items: center;
}

.right-side > text {
  margin-right: 5px;
  font-size: 0.8rem;
  color: #de5b4a;
}

.right-side > image {
  width: 16px;
  height: 16px;
}

.order-sort {
  display: flex;
}

.sort-item {
  width: 20%;
  padding: 10px 0;
  overflow: hidden;
  text-align: center;
}

.sort-item > image {
  width: 30%;
}

.sort-item > text {
  display: block;
  margin-top: 5px;
  font-size: 0.7rem;
  color: #666;
}

.source-sort {
  display: flex;
}

.source-sort > .sort-item {
  width: 25%;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.menu-item > image {
  width: 6%;
  margin-right: 10px;
}