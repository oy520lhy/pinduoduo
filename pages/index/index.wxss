/**index.wxss**/
/* 顶部产品分类 */
.index {
  padding-top: 70rpx;
}

.sorts-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  white-space: nowrap;
  background-color: #fff;
}

.sort-item {
  display: inline-block;
  box-sizing: border-box;
  width: 107.14rpx;
  height: 70rpx;
  /* padding: 16rpx 0; */
  text-align: center;
  font-size: 32rpx;
  line-height: 70rpx;
}

.active-sort-item {
  color: #e02e24;
  border-bottom: 6rpx solid #e02e24;
}