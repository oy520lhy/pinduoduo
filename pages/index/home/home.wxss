/* 轮播图 */
swiper {
  height: 234.66666rpx;
} 

swiper-item > navigator {
  display: block;
  width: 100%;
  height: 100%; 
}

/* 活动分类 */
.activities {
  white-space: normal;
}

.activities-wrap {
  display: flex;
  flex-wrap: wrap;
}

.activities-item {
  box-sizing: border-box;
  text-align: center;
  background-color: #fff;
}

.activities-item > image {
  width: 70%;
}

.activities-item > text {
  display: block;
  font-size: 26rpx;
}

.indicator-wrap {
  width: 100%;
  padding: 10rpx 0;
  background-color: #fff;
}

.scroll-indicator {
  width: 35%;
  height: 4rpx;
  margin: 0 auto;
  background-color: #ccc;
}

.indicator-line {
  height: 100%;
  background-color: #e02e24;
}

.festival-active {
  margin: 10rpx 0;
}

/* 产品卡片 */
.homeprod {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.homeprod > image {
  height: 330rpx;
}

.homeprod > .description {
  display: block;
  font-size: 28rpx;
}

.price_join_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx; 
}

.left_side,
.right_side {
  display: flex;
  align-items: center;
}

.left_side > text:first-child {
  margin-right: 20rpx;
  font-size: 40rpx;
  color: #e02e24;
}

.left_side > text:last-child {
  font-size: 24rpx;
  color: #999;
}

.right_side .customers {
  font-size: 0;
}

.right_side image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.customers {
  margin-right: 16rpx;
}

.customers > image:first-child {
  z-index: 2;
  margin-right: -16rpx;
}

.right_side > navigator {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 30rpx;
  background-color: #e02e24;
  border-radius: 6rpx;
}